{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "/primitive/statement/statement_schema",
  "title": "Statement Schema",
  "$ref": "#/$defs/StatementData",
  "$defs": {
    "StatementDataStatement": {
      "type": "object",
      "description": "The statement content: this will be question for the quiz or other activities",
      "properties": {
        "text": {
          "type": "string",
          "description": "The textual content of the statement"
        }
      },
      "required": [
        "text"
      ]
    },
    "StatementData": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "primitive/statement"
        },
        "statement": {
          "$ref": "#/$defs/StatementDataStatement"
        }
      },
      "required": [
        "type",
        "statement"
      ]
    }
  }
}
