{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "/primitive/statement/activities/true_false/statement_true_false_schema",
  "title": "Statement True/False Activity Schema",
  "x-csharp-using": [
    "EduObject.Activities.TrueFalse"
  ],
  "$ref": "#/$defs/StatementTrueFalseData",
  "$defs": {
    "StatementTrueFalseProblem": {
      "x-csharp-generate": false,
      "description": "True/false problem about a statement. Statement.text is the question.",
      "allOf": [
        {
          "$ref": "#/$defs/TrueFalseProblem"
        },
        {
          "type": "object",
          "properties": {
            "statement": {
              "$ref": "#/$defs/StatementDataStatement",
              "description": "The statement content (provides question text)"
            }
          },
          "required": [
            "statement"
          ]
        }
      ]
    },
    "StatementTrueFalseData": {
      "x-csharp-generate": false,
      "description": "Complete activity data for statement true/false.",
      "allOf": [
        {
          "$ref": "#/$defs/TrueFalseData"
        },
        {
          "type": "object",
          "properties": {
            "problem": {
              "$ref": "#/$defs/StatementTrueFalseProblem",
              "description": "The true/false problem with statement content"
            }
          }
        }
      ]
    },
    "TrueFalseProblem": {
      "x-csharp-generate": false,
      "type": "object",
      "description": "True/false problem - only correct answer. Question comes from context.",
      "properties": {
        "correct_answer": {
          "type": "boolean",
          "description": "The correct answer (true or false)"
        }
      },
      "required": [
        "correct_answer"
      ],
      "additionalProperties": false
    },
    "TrueFalseData": {
      "type": "object",
      "description": "Complete true/false data with question, answer, and metadata",
      "properties": {
        "type": {
          "type": "string",
          "const": "exercise/true_false"
        },
        "true_false": {
          "$ref": "#/$defs/TrueFalse"
        },
        "question_text": {
          "type": "string",
          "description": "The question text (usually same as true_false.question)"
        },
        "correct_answer": {
          "type": "string",
          "description": "The correct answer as a string ('true' or 'false')"
        }
      },
      "required": [
        "type",
        "true_false",
        "question_text",
        "correct_answer"
      ],
      "additionalProperties": false
    },
    "StatementDataStatement": {
      "type": "object",
      "description": "The statement content: this will be question for the quiz or other activities",
      "properties": {
        "text": {
          "type": "string",
          "description": "The textual content of the statement"
        }
      },
      "required": [
        "text"
      ]
    },
    "TrueFalse": {
      "type": "object",
      "description": "True/false question and correct answer",
      "properties": {
        "question": {
          "type": "string",
          "description": "The question text"
        },
        "correct_answer": {
          "type": "boolean",
          "description": "Whether the correct answer is true or false"
        }
      },
      "required": [
        "question",
        "correct_answer"
      ],
      "additionalProperties": false
    }
  }
}
