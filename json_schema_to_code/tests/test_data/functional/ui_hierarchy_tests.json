[
  {
    "name": "ui_hierarchy_inline_unions",
    "description": "Test complex UI hierarchy schema with inline unions enabled - real-world schema with anyOf patterns, comment fields, inheritance, and complex object hierarchies",
    "config": {
      "use_inline_unions": true
    },
    "schema_file": "schemas/ui_hierarchy_schema.json",
    "expected_contains": [
      "from dataclasses import dataclass",
      "from typing import Any, Literal",
      "from dataclasses_json import dataclass_json",
      "from abc import ABC",
      "class BaseUIObject(ABC):",
      "class Style:",
      "width: float | str",
      "height: float | str",
      "margin: Any | str",
      "padding: Any | str",
      "fontSize: float | str",
      "fontWeight: float | str",
      "borderRadius: float | str",
      "style: None | Style",
      "enabled: bool",
      "class TextObject(BaseUIObject):",
      "class ButtonObject(BaseUIObject):",
      "class InputObject(BaseUIObject):",
      "class ContainerObject(BaseUIObject):",
      "UiObjectUnion ="
    ],
    "expected_not_contains": [
      "FloatOrStr =",
      "AnyOrStr =",
      "NoneOrStyle =",
      "_comment_definitions",
      "_comment_base",
      "_comment_ui_objects",
      "class _comment"
    ]
  },
  {
