[
  {
    "name": "generation_comment_enabled",
    "description": "Test that generation comment is added when add_generation_comment is true",
    "config": {
      "add_generation_comment": true,
      "use_inline_unions": false
    },
    "schema": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "definitions": {
        "SimpleClass": {
          "type": "object",
          "properties": {
            "name": {"type": "string"},
            "value": {"type": "number"}
          }
        }
      }
    },
    "expected_contains": [
      "# Generated by json_schema_to_code v",
      "class SimpleClass:",
      "name: str",
      "value: float"
    ],
    "expected_not_contains": []
  },
  {
    "name": "generation_comment_disabled",
    "description": "Test that generation comment is not added when add_generation_comment is false",
    "config": {
      "add_generation_comment": false,
      "use_inline_unions": false
    },
    "schema": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "definitions": {
        "SimpleClass": {
          "type": "object",
          "properties": {
            "name": {"type": "string"},
            "value": {"type": "number"}
          }
        }
      }
    },
    "expected_contains": [
      "from dataclasses import dataclass",
      "class SimpleClass:",
      "name: str",
      "value: float"
    ],
    "expected_not_contains": [
      "# Generated by json_schema_to_code"
    ]
  }
]
